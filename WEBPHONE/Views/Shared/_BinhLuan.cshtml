@{
    Layout = null;


}
<div style="width: 55%">
    <div class="nav nav-tabs" style="padding:0 20px; margin: 16px">
        <strong>Danh Sách Bình luận</strong>
    </div>
    <div class="tab-content" style="padding:0 20px">
        <div>
            @if (ViewBag.BinhLuanList.Count == 0)
            {
                <span>Chưa có bình luận nào cho sản phẩm</span>
            }
            else
            {
                foreach (var item in ViewBag.BinhLuanList)
                {
                    <span style="padding-right: 10px;font-weight: 550">@item.Name</span>
                    <span>@item.Content  </span>
                    <hr style="width:100%;height:2px;" align="center" color="#000" />
                }
            }

        </div>
    </div>
</div>

